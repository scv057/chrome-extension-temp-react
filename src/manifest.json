{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_icon": {
      "32": "icons/yellow-cat-32.png",
      "128": "icons/yellow-cat-128.png",
      "512": "icons/yellow-cat-512.png"
    },
    "default-title": "Click to show an alert"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.com/video/*"],
      "js": ["scripts/content-script.js"],
      "all_frames": false,
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ]
}
